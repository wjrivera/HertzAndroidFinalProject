<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.williamj.hertz.activity.ContactFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center|bottom"
        android:paddingBottom="40dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Click Number to Connect"
            android:textStyle="bold"
            android:background="@color/colorPrimaryLight"
            android:textSize="18dp" />


        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/labelReservation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Reservations"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"
            android:paddingLeft="5dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/reservationsNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1-800-654-3131"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:onClick="callReservationButton"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/labelCarShop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Car in Shop?"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"
            android:paddingLeft="5dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/labelCarShopNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="1-800-704-4473"
            android:onClick="callShopButton"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/labelAppHelp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="App Questions"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorPrimary"
            android:paddingLeft="5dp" />
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/labelAppHelpEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="info@hertz.com"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="?attr/colorAccent"
            android:paddingLeft="5dp" />


    </LinearLayout>

</RelativeLayout>