<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hertzsplash"
    tools:context="com.example.williamj.hertz.activity.CongratsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Congratulations"
            android:id="@+id/textView12"
            android:layout_gravity="center"
            android:textSize="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Confirmation Number is"
            android:id="@+id/textView13"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="8432187516"
            android:id="@+id/textView14"
            android:layout_gravity="center" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="38dp"
        android:paddingRight="100dp"
        android:paddingLeft="100dp"
        android:gravity="center">

        <Button
            android:id="@+id/findLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textSize="20dp"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:paddingLeft="5dp"
            android:onClick="goHomeButtonClick"/>


    </LinearLayout>


</FrameLayout>
